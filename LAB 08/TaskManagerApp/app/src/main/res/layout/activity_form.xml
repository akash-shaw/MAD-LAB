<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText android:id="@+id/etName" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Task Name" />

    <EditText android:id="@+id/etDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Select Date &amp; Time" android:focusable="false" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Priority:" android:layout_marginTop="10dp"/>
    <Spinner android:id="@+id/spinnerPriority" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button android:id="@+id/btnSave" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Save Task" android:layout_marginTop="20dp"/>
</LinearLayout>