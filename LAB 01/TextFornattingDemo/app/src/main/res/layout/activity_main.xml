<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Formatting Demo"
        android:textSize="24sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/helloText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Android World!"
        android:textSize="20sp"
        android:textColor="#3F51B5"
        android:fontFamily="cursive"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/justifiedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a long paragraph intended to demonstrate how text justification works in Android. The text should spread evenly across the width of the screen, creating clean edges on both the left and right sides."
        android:textSize="16sp"
        android:textColor="#000000"
        android:justificationMode="inter_word"
        android:fontFamily="serif"/>

</LinearLayout>